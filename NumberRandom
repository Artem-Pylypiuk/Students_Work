#include <cstdlib>
#include <ctime>
#include <iostream>

void game() {
  srand(time(NULL));
  int random = rand() % 100 + 1;
  int tries = 6;
  int guess;
  std::cout << "type the number" << std::endl;
  for (int i = 0; i < tries; i++) {
    std::cin >> guess;
    if (guess > random) {
      std::cout << "less" << std::endl;
    }
    else if (guess < random) {
      std::cout << "more" << std::endl;
    }
    else {
      std::cout << "You won, congrats!" << std::endl;
      break;
    }
  }
}

int main()
{
  char again = 'y';
  while (again == 'y' || again == 'Y') {
    game();
    std::cout << "wanna play again?" << std::endl;
    std::cin >> again;
  }
  return 0;
}
